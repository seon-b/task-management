<form method="POST" action="/api/auth/login" class="loginForm">
  <div class="formGroup">
    <label for="email">Email: </label>
    <input type="text" name="email" id="email" placeholder="email" />
  </div>
  <div class="formGroup">
    <label for="password">password: </label>
    <input
      type="password"
      name="password"
      id="password"
      placeholder="password"
    />
  </div>

  <div class="formGroup">
    <button id="login" type="submit" class="button loginSubmitButton">
      Log In
    </button>
  </div>
</form>
