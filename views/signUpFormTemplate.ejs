<form method="POST" action="/api/users/new-user" class="loginForm">
  <div class="formGroup">
    <label for="email">Email: </label>
    <input type="text" name="email" id="email" placeholder="email" />
  </div>
  <div class="formGroup">
    <label for="password">password: </label>
    <input
      type="password"
      name="password"
      id="password"
      placeholder="password"
    />
  </div>

  <div class="formGroup">
    <button id="signup" type="submit" class="loginSubmitButton">Sign Up</button>
  </div>
</form>
